# Configuración de PostgreSQL
POSTGRES_DB=simulador_emprendimientos
POSTGRES_USER=krakedev_user
POSTGRES_PASSWORD=krakedev_password
POSTGRES_PORT=5432

# Configuración de pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@krakedev.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

# Configuración del Backend
BACKEND_PORT=3000
NODE_ENV=development

# Configuración de la Base de Datos (para el backend)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}

# Configuración de la Base de Datos (para desarrollo local)
DATABASE_URL_LOCAL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}

# Configuración de Google AI (opcional)
GOOGLE_AI_API_KEY=AIzaSyAUgfmBWP6MvsSlYsVPJbNdk4JyRfF-l8g

# Configuración de JWT (opcional)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Configuración de Volúmenes
POSTGRES_DATA_VOLUME=postgres_data
PGADMIN_DATA_VOLUME=pgadmin_data

# Configuración de Redes
NETWORK_NAME=krakedev_network

# Configuración de Contenedores
POSTGRES_CONTAINER_NAME=krakedev_postgres
PGADMIN_CONTAINER_NAME=krakedev_pgadmin
BACKEND_CONTAINER_NAME=krakedev_backend

# Configuración de Imágenes
POSTGRES_IMAGE=postgres:15-alpine
PGADMIN_IMAGE=dpage/pgadmin4:8.7
NODE_IMAGE=node:18-alpine
